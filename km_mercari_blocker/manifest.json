{
    "name": "けむメルカリブロッカー",
    "description": "けむのメルカリをブロックします",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.mercari.com/*",
                "https://mercari.com/*"
            ],
            "js": [
                "jquery-3.4.1.min.js",
                "main.js"
            ],
            "css": [
                "main.css"
            ]
        }
    ]
}